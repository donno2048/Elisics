<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_padding">

    <TextView
        android:id="@+id/bluetooth_scan_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/bluetooth_scan_dialog_items"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"></ListView>

    <TextView
        android:id="@+id/bluetooth_scan_dialog_more_info_text"
        android:text="@string/bt_more_info_link_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>